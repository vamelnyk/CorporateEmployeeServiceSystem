@model EmployeeSelfServiceDiploma.Models.Application

@{
    ViewBag.Title = "Редагування заяви";
}

<h2 style="margin-bottom: 10px;">Редагування заяви</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.ApplicationId)
        @Html.HiddenFor(model => model.EmployeeID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Title, new { style="width:663px; height: 25px; font-size: 20px; font-weight: 400" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Body, 7, 80, null)
            @Html.ValidationMessageFor(model => model.Body)
        </div>
        <br />
        <p>
            <input type="submit" value="Зберегти зміни" class="button"/>
        </p>
        <br />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
