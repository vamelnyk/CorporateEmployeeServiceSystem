@model IEnumerable<EmployeeSelfServiceDiploma.Models.Employee>

@{
    ViewBag.Title = "Редагування даних";
}

<h2>Index</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
